{
	"name": "omnilogs",
	"version": "1.1.0",
	"description": "A simple plug and play logger for your nodejs projects.",
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc && chmod +x dist/index.js",
		"dev": "NODE_ENV=development tsx watch src/index.ts",
		"check-types": "tsc --noEmit",
		"install-global": "npm run build && npm install -g .",
		"pub": "npm run build && npm publish",
		"uninstall-global": "npm uninstall -g omnilogs",
		"test": "npm run test:custom-levels",
		"test:file-transport": "tsx src/test/file-transport-test.ts",
		"test:custom-levels": "tsx src/test/custom-levels-test.ts",
		"format": "prettier --write ."
	},
	"keywords": [
		"developers",
		"logger",
		"nodejs",
		"winston",
		"loki",
		"telegram",
		"logging",
		"grafana"
	],
	"author": {
		"name": "Yaman Jain",
		"url": "https://github.com/yaman-694"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^24.5.2",
		"prettier": "^3.6.2",
		"tsx": "^4.20.4",
		"typescript": "^5.9.2"
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/yaman-694/omnilogs.git",
		"directory": "."
	},
	"bugs": {
		"url": "https://github.com/yaman-694/omnilogs/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist/**/*",
		"README.md",
		"package.json"
	],
	"dependencies": {
		"dotenv": "^17.2.2",
		"winston": "^3.17.0",
		"winston-daily-rotate-file": "^5.0.0",
		"winston-loki": "^6.1.3",
		"winston-telegram": "^2.7.0"
	}
}
